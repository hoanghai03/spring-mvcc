<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/decorators">
    <!-- apply web template   -->
    <decorator name="trang-chu" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
    <!-- apply admin template   -->
    <decorator name="home" page="admin.jsp">
        <pattern>/quan-tri*</pattern>
    </decorator>
    
    <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>
    
    <decorator name="register" page="register.jsp">
        <pattern>/dang-ky</pattern>
    </decorator>
</decorators>